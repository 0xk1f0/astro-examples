---
import Layout from '../layouts/Layout.astro';
import { suid } from '../libs/utils';
import {get,set} from './shared'

const proj = "18_ssr-cache"

let uid = get()

if(uid == 0){
	uid = suid()
	set(uid)
	console.log(`index> assigning new id (${uid})`)
}else{
	console.log(`index> existing id (${uid})`)
}

function delay(ms) {
  return new Promise(resolve => setTimeout(resolve, ms));
}
await delay(2000)
console.log(`index> done`)

---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Server cache <span class="text-gradient">{uid}</span></h1>
		<a href={`https://github.com/MicroWebStacks/astro-examples/tree/main/${proj}`} target="_blank">github project '{proj}'</a>
		<p class="instructions">
			example for testing server cache. Fresh load has 500 ms delay.
		</p>
		<p class="client"></p>
		<button class="update">update (spoil cache)</button>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
</style>

<script>
	import {async_put,suid} from '../libs/utils'
	document.querySelector(".update").onclick = ()=>{
		const newVal = suid()
		async_put("api/update",{value:newVal}).then((resp)=>{
			console.log(newVal)
		})
	}
</script>