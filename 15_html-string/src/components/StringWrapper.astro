---
const html = await Astro.slots.render('default');
import { Code } from 'astro/components';
---
<Fragment set:html={html} />

<Code code={html} lang="html" />

<style>
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
</style>
