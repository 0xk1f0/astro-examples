---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro'

const proj = "13_client-persistent-counter"
let counter = 0
const cookie = Astro.cookies.get("counter")
if(cookie){
	counter = cookie.value
}
console.log(`index.astro> cookie counter = ${counter}`)

---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Client <span class="text-gradient">Persistent</span> Counter</h1>
		<a href={`https://github.com/MicroWebStacks/astro-examples/tree/main/${proj}`} target="_blank">github project '{proj}'</a>
		<p class="instructions">
		Using cookies !!! This example is using 'counter' cookie !!!
		</br>
		This counter will persist through pages relaod despite being a client counter.
			</br>
			Only a single counter is used in this example given that a single cookie is used
		</p>
		<ul>
			<Card title="Persistent" init={counter}/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
</style>
